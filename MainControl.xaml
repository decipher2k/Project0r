<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOrganizer"
             xmlns:TimePicker="clr-namespace:RoyT.TimePicker;assembly=RoyT.TimePicker" x:Class="ProjectOrganizer.MainControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="18" />
            <Setter Property="Height" Value="18" />
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox" x:Key="ItemsSmall">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="3"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox" x:Key="ItemsLarge">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" Rows="3"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
   
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl UseLayoutRounding="False" TabStripPlacement="Left" SelectionChanged="TabControl_SelectionChanged" Grid.Row="1">

            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <RotateTransform Angle="270" />
                        </Setter.Value>
                    </Setter>
                </Style>

            </TabControl.ItemContainerStyle>
            <TabItem Header="Apps/Files">


                <Grid Background="#FFE5E5E5" Margin="-4,-4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24">

                        </RowDefinition>
                        <RowDefinition Height="*">

                        </RowDefinition>

                    </Grid.RowDefinitions>
                    <ToolBar Grid.ColumnSpan="2" Background="White" Padding="0,3,0,0" >
                        <Button x:Name="bnAddProgram" ToolTip="Add Program" Height="16" Width="16" BorderBrush="Black" Cursor="Hand" Style="{DynamicResource ButtonStyle}" Click="Button_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/development.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="bnAddFile" ToolTip="Add File" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}" Click="bnAddFile_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/document.png"/>
                            </Button.Background>
                        </Button>
                        <Button ToolTip="Delete" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/bin.png"/>
                            </Button.Background>
                        </Button>
                    </ToolBar>
                    <ListBox  x:Name="lbApps" Width="Auto" d:ItemsSource="{Binding Apps, Mode=OneWay}" Grid.Column="0" Grid.Row="1" MouseDoubleClick="ListBox_MouseDoubleClick" Style="{DynamicResource ItemsSmall}"  >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding picture}" Grid.Row="0" />
                                    <TextBlock Text="{Binding name}" Grid.Row="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ListBox x:Name="lbFiles" Width="Auto" d:ItemsSource="{Binding Files, Mode=OneWay}" Grid.Column="1" Grid.Row="1" Style="{DynamicResource ItemsSmall}" MouseDoubleClick="lbFiles_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding picture}" Grid.Row="0" />
                                    <TextBlock Text="{Binding name}" Grid.Row="1"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

            </TabItem>
            <TabItem Header="Notes">

                <Grid Background="#FFE5E5E5" Margin="-4,-4,0,0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28">

                        </RowDefinition>
                        <RowDefinition Height="*">

                        </RowDefinition>

                    </Grid.RowDefinitions>
                    <ToolBar  Background="White" Padding="0,0,0,0" >
                        <Button ToolTip="Add Note" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/document.png"/>
                            </Button.Background>
                        </Button>
                        <Button ToolTip="Delete" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/bin.png"/>
                            </Button.Background>
                        </Button>
                    </ToolBar>
                    <ListBox Grid.Row="1" x:Name="lbNotes" d:ItemsSource="{Binding Notes, Mode=OneWay}" Width="Auto" Height="Auto" Margin="-4,-4,-9,-9" Style="{DynamicResource ItemsLarge}"/>
                </Grid>
            </TabItem>
            <TabItem Header="ToDo">
                <Grid Background="#FFE5E5E5" Margin="-4,-4,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="28">

                        </RowDefinition>
                        <RowDefinition Height="*">

                        </RowDefinition>

                    </Grid.RowDefinitions>
                    <ToolBar Grid.Row="0" Background="White" Padding="0,0,0,0" >
                        <Button ToolTip="Add ToDo Item" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/document.png"/>
                            </Button.Background>
                        </Button>
                        <Button ToolTip="Delete" Height="16" Width="16" BorderBrush="Black" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/bin.png"/>
                            </Button.Background>
                        </Button>
                    </ToolBar>
                    <ListBox Grid.Row="1" x:Name="lbTodo" d:ItemsSource="{Binding ToDo, Mode=OneWay}" Width="Auto" Height="Auto" Margin="-4,-4,-9,-9" />
                </Grid>
            </TabItem>
            <TabItem Header="Calendar">

                <Grid>

                    <Canvas >
                        <Calendar HorizontalAlignment="Center" VerticalAlignment="Top" Height="166" Width="179" Canvas.Top="-6" Canvas.Left="-2"/>
                        <TimePicker:TimePicker Canvas.Left="202" Height="128" Width="129" RenderTransformOrigin="0.388,0.31" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="6"/>
                        <Rectangle Height="162" Canvas.Left="176" Stroke="Black" Width="173" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="-3"/>
                        <Rectangle Grid.Row="0" Height="162" Canvas.Left="348" Stroke="Black" Width="431" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="-3"/>
                        <ListBox  Height="293" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" Canvas.Top="158" VerticalAlignment="Top" Canvas.Left="-1"/>
                        <Label Content="&lt;no time set&gt;" Canvas.Left="182" Canvas.Top="132" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="163"/>
                        <Label Content="Caption:" Canvas.Left="367" Canvas.Top="8" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Canvas.Left="386" TextWrapping="Wrap" Canvas.Top="31" Width="353" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Label Content="Details" Canvas.Left="366" Canvas.Top="48" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Canvas.Left="386" TextWrapping="Wrap" Canvas.Top="72" Width="352" HorizontalAlignment="Left" VerticalAlignment="Center" Height="54"/>
                        <Button Content="Create" Canvas.Left="652" Canvas.Top="134" HorizontalAlignment="Left" VerticalAlignment="Center" Width="86"/>
                    </Canvas>

                </Grid>


            </TabItem>
            <TabItem Header="Mails">
                <Grid Background="#FFE5E5E5" Margin="-4,-4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24">

                        </RowDefinition>
                        <RowDefinition Height="*">

                        </RowDefinition>

                    </Grid.RowDefinitions>
                    <ToolBar Grid.Row="0" Grid.ColumnSpan="2" Background="White" Padding="0,0,0,0" >
                        <Button Height="18" Width="18" Style="{DynamicResource ButtonStyle}">
                            <Button.Background>
                                <ImageBrush ImageSource="/document.png"/>
                            </Button.Background>
                        </Button>
                    </ToolBar>
                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition>
                                
                            </RowDefinition>
                            <RowDefinition>
                                
                            </RowDefinition>
                        </Grid.RowDefinitions>
                        <ListBox Grid.Row="0">
                            
                        </ListBox>
                        <RichTextBox Grid.Row="1">
                            
                        </RichTextBox>
                    </Grid>
                </Grid>
            </TabItem>



        </TabControl>
    </Grid>



</UserControl>
